{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuration",
  "description": "SPoG UI configuration",
  "type": "object",
  "properties": {
    "bombastic": {
      "default": {
        "filters": {}
      },
      "allOf": [
        {
          "$ref": "#/definitions/Bombastic"
        }
      ]
    },
    "consent": {
      "default": {},
      "allOf": [
        {
          "$ref": "#/definitions/Consent"
        }
      ]
    },
    "cve": {
      "default": {
        "filters": {}
      },
      "allOf": [
        {
          "$ref": "#/definitions/Cve"
        }
      ]
    },
    "features": {
      "default": {
        "additionalPackageInformation": true,
        "dedicatedSearch": true,
        "extendSection": true,
        "scanner": true,
        "showSource": true
      },
      "allOf": [
        {
          "$ref": "#/definitions/Features"
        }
      ]
    },
    "global": {
      "default": {
        "aboutBackgroundSrc": null,
        "aboutBrandImageSrc": null,
        "brandImageSrc": null,
        "documentationUrl": null,
        "errorImageSrc": null,
        "productName": null,
        "showGithubLink": false,
        "supportCaseLabel": null,
        "supportCaseUrl": null,
        "supportUrl": null
      },
      "allOf": [
        {
          "$ref": "#/definitions/Global"
        }
      ]
    },
    "landingPage": {
      "default": {
        "afterInnerContent": "",
        "afterOuterContent": "",
        "beforeInnerContent": "",
        "beforeOuterContent": "",
        "footerContent": "",
        "headerContent": ""
      },
      "allOf": [
        {
          "$ref": "#/definitions/LandingPage"
        }
      ]
    },
    "packages": {
      "default": {
        "filters": {}
      },
      "allOf": [
        {
          "$ref": "#/definitions/Packages"
        }
      ]
    },
    "scanner": {
      "default": {},
      "allOf": [
        {
          "$ref": "#/definitions/Scanner"
        }
      ]
    },
    "vexination": {
      "default": {
        "filters": {}
      },
      "allOf": [
        {
          "$ref": "#/definitions/Vexination"
        }
      ]
    }
  },
  "definitions": {
    "Bombastic": {
      "description": "Bombastic specific configuration",
      "type": "object",
      "properties": {
        "filters": {
          "default": {},
          "allOf": [
            {
              "$ref": "#/definitions/Filters"
            }
          ]
        }
      }
    },
    "Consent": {
      "description": "Configuration for the consent dialog",
      "type": "object",
      "properties": {
        "actionNo": {
          "type": [
            "string",
            "null"
          ]
        },
        "actionYes": {
          "type": [
            "string",
            "null"
          ]
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "title": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Cve": {
      "description": "CVE specific configuration",
      "type": "object",
      "properties": {
        "filters": {
          "default": {},
          "allOf": [
            {
              "$ref": "#/definitions/Filters"
            }
          ]
        }
      }
    },
    "Features": {
      "description": "Features for SPoG UI which can enabled/disabled.\n\nBy default, all features are enabled.",
      "type": "object",
      "properties": {
        "additionalPackageInformation": {
          "description": "Enable the \"additional infos\" tab on the package details page",
          "default": true,
          "type": "boolean"
        },
        "dedicatedSearch": {
          "description": "Enable the dedicated search views (including the \"complex\" mode).",
          "default": true,
          "type": "boolean"
        },
        "extendSection": {
          "description": "Enables the \"extend\" section",
          "default": true,
          "type": "boolean"
        },
        "scanner": {
          "description": "Enables the SBOM scanner",
          "default": true,
          "type": "boolean"
        },
        "showSource": {
          "description": "Enable the \"source\" tabs",
          "default": true,
          "type": "boolean"
        }
      }
    },
    "FilterCategory": {
      "description": "A filter category",
      "type": "object",
      "required": [
        "label",
        "options"
      ],
      "properties": {
        "label": {
          "type": "string"
        },
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FilterOption"
          }
        }
      }
    },
    "FilterOption": {
      "description": "The filter option element which can be added",
      "oneOf": [
        {
          "description": "Add a checkbox option",
          "type": "object",
          "required": [
            "id",
            "label",
            "type"
          ],
          "properties": {
            "id": {
              "description": "Internal ID (must be unique)",
              "type": "string"
            },
            "label": {
              "description": "End-user friendly label",
              "type": "string"
            },
            "script": {
              "description": "A JavaScript snippet to execute, gathering search terms.\n\nThe result must be an array of strings. For example:\n\n```yaml script: | [\"foo:bar\", \"bar:baz\"] ```",
              "type": "string"
            },
            "terms": {
              "description": "A list of search terms",
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "type": {
              "type": "string",
              "enum": [
                "check"
              ]
            }
          }
        },
        {
          "description": "Add a select/radio button",
          "type": "object",
          "required": [
            "group",
            "options",
            "type"
          ],
          "properties": {
            "default": {
              "description": "The ID of the option which should be selected by default",
              "type": [
                "string",
                "null"
              ]
            },
            "group": {
              "description": "Internal ID (groups radio options)",
              "type": "string"
            },
            "options": {
              "description": "Search terms which will be added using an OR group",
              "type": "array",
              "items": {
                "$ref": "#/definitions/FilterSelectItem"
              }
            },
            "type": {
              "type": "string",
              "enum": [
                "select"
              ]
            }
          }
        },
        {
          "description": "Add a visual divider",
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "divider"
              ]
            }
          }
        }
      ]
    },
    "FilterSelectItem": {
      "description": "Item of a [`FilterSelectOption`]",
      "type": "object",
      "required": [
        "id",
        "label"
      ],
      "properties": {
        "id": {
          "description": "Internal ID (must be unique for a radio group)",
          "type": "string"
        },
        "label": {
          "description": "End-user friendly label",
          "type": "string"
        },
        "script": {
          "description": "A JavaScript snippet to execute, gathering search terms.\n\nThe result must be an array of strings. For example:\n\n```yaml script: | [\"foo:bar\", \"bar:baz\"] ```",
          "type": "string"
        },
        "terms": {
          "description": "A list of search terms",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Filters": {
      "description": "A set of customizable filters",
      "type": "object",
      "properties": {
        "categories": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FilterCategory"
          }
        }
      }
    },
    "Global": {
      "description": "Global values which affect the overall console",
      "type": "object",
      "properties": {
        "aboutBackgroundSrc": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "aboutBrandImageSrc": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "brandImageSrc": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "documentationUrl": {
          "default": null,
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "errorImageSrc": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "productName": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "showGithubLink": {
          "default": false,
          "type": "boolean"
        },
        "supportCaseLabel": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "supportCaseUrl": {
          "default": null,
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "supportUrl": {
          "default": null,
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        }
      }
    },
    "Hint": {
      "description": "A hint configuration",
      "type": "object",
      "required": [
        "body",
        "title"
      ],
      "properties": {
        "body": {
          "description": "The body content of the hint. Must be valid HTML.",
          "type": "string"
        },
        "title": {
          "description": "The title to show. Must be valid HTML.",
          "type": "string"
        }
      }
    },
    "LandingPage": {
      "description": "Configuration for the landing page",
      "type": "object",
      "properties": {
        "afterInnerContent": {
          "description": "Content directly after the entry box",
          "default": "",
          "type": "string"
        },
        "afterOuterContent": {
          "description": "Content directly after the entry box",
          "default": "",
          "type": "string"
        },
        "beforeInnerContent": {
          "description": "Content directly before the entry box",
          "default": "",
          "type": "string"
        },
        "beforeOuterContent": {
          "description": "Content directly before the entry box",
          "default": "",
          "type": "string"
        },
        "footerContent": {
          "description": "Content below the search entry box section",
          "default": "",
          "type": "string"
        },
        "headerContent": {
          "description": "Content above the search entry box section",
          "default": "",
          "type": "string"
        }
      }
    },
    "Packages": {
      "type": "object",
      "properties": {
        "filters": {
          "default": {},
          "allOf": [
            {
              "$ref": "#/definitions/Filters"
            }
          ]
        }
      }
    },
    "Scanner": {
      "description": "Scanner specific configuration",
      "type": "object",
      "properties": {
        "documentationUrl": {
          "description": "Adding a link to a blog post explaining how to create an SBOM",
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "welcomeHint": {
          "description": "The welcome hint section. If `None`, then no hint is shown.",
          "anyOf": [
            {
              "$ref": "#/definitions/Hint"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "Vexination": {
      "description": "Vexination specific configuration",
      "type": "object",
      "properties": {
        "filters": {
          "default": {},
          "allOf": [
            {
              "$ref": "#/definitions/Filters"
            }
          ]
        }
      }
    }
  }
}